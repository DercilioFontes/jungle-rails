<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

      <div class="row">
        <h3>Reviews:</h3>
      </div>
      <% Review.where(product_id: @product.id).each do |review| %>
        <div class="row">
          <dl class="dl-horizontal">
            <dt>Rating</dt>
            <% arr = Array.new(5) %>
            <% count =  review.rating %>
            <% for i in 0..5 %>
            <% count - 1 >= 0 ? arr[i] = true : arr[i] = false %>
            <% count -= 1  %>
            <% end %>
            <% star1 = arr[1] ? 'star' : 'star-o' %>
            <% star2 = arr[2] ? 'star' : 'star-o' %>
            <% star3 = arr[3] ? 'star' : 'star-o' %>
            <% star4 = arr[4] ? 'star' : 'star-o' %>
            <% star5 = arr[5] ? 'star' : 'star-o' %>
            <dd><%= fa_icon star1 %> <%= fa_icon star2 %> <%= fa_icon star3 %> <%= fa_icon star4 %> <%= fa_icon star5 %></dd>
            <dt>Description</dt>
            <dd><%= review.description %></dd>
          </dl>
        </div>
      <% end %>
   
  </article>

</section>
